@{
  Layout = "_Layout";
}
@model List<HairSalon.Models.Stylist>;
<h1>Welcome to Eau Claire's Stylist and Client Manager!</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists have been entered yet, please enter a stylist</h3>
  <p>@Html.ActionLink("Add new stylist", "Create", "Stylists")</p>
} else {
  <p>@Html.ActionLink("See all clients", "Index", "Clients")</p>
  <p>@Html.ActionLink("See all stylists", "Index", "Stylists")</p>
}